<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="border-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.app.controller.CheckInController">
   <top>
      <Label text="%checkin.title" BorderPane.alignment="CENTER_LEFT">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" left="20.0" top="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <HBox alignment="CENTER" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="10.0">
               <children>
                  <Label text="%checkin.cameraFeed">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="cameraFeedView" fitHeight="400.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: #333; -fx-border-width: 2;" />
                  <Button mnemonicParsing="false" onAction="#handleStartCamera" text="Start Camera" />
               </children>
            </VBox>
            <VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="300.0" spacing="20.0" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8;">
               <children>
                  <Label text="%checkin.status">
                     <font>
                        <Font name="System Bold" size="18.0" />
                     </font>
                  </Label>
                  <ImageView fx:id="memberPhotoView" fitHeight="150.0" fitWidth="150.0" pickOnBounds="true" preserveRatio="true" style="-fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-background-color: #ecf0f1;" />
                  <Label fx:id="memberNameLabel" text="Scan QR Code" wrapText="true">
                     <font>
                        <Font name="System Bold" size="16.0" />
                     </font>
                  </Label>
                  <Label fx:id="memberStatusLabel" text="Awaiting Scan" styleClass="status-expiring">
                     <font>
                        <Font name="System Bold" size="14.0" />
                     </font>
                  </Label>
                  <Label fx:id="memberExpiryLabel" text="Expiry: N/A" />
                  <Label fx:id="memberPhoneLabel" text="Phone: N/A" />
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
</BorderPane>
