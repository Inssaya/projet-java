<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="700.0" styleClass="border-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.app.controller.MemberManagementController">
   <top>
      <VBox spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="%member.title">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <TextField fx:id="searchField" onKeyReleased="#handleSearch" prefWidth="300.0" promptText="%member.search" />
                  <Button mnemonicParsing="false" onAction="#handleAddMember" text="%member.add" />
                  <Button mnemonicParsing="false" onAction="#handleEditMember" text="%member.edit" />
                  <Button mnemonicParsing="false" onAction="#handleRenewSubscription" text="%member.renew" />
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <TableView fx:id="memberTable" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="50.0" text="%member.id" />
          <TableColumn fx:id="nameColumn" prefWidth="150.0" text="%member.name" />
            <TableColumn fx:id="phoneColumn" prefWidth="100.0" text="%member.phone" />
            <TableColumn fx:id="joinDateColumn" prefWidth="100.0" text="%member.joinDate" />
            <TableColumn fx:id="expiryDateColumn" prefWidth="100.0" text="%member.expiryDate" />
            <TableColumn fx:id="statusColumn" prefWidth="100.0" text="%member.status" />
            <TableColumn fx:id="qrValueColumn" prefWidth="150.0" text="%member.qrValue" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <BorderPane.margin>
            <Insets left="20.0" right="20.0" />
         </BorderPane.margin>
      </TableView>
   </center>
</BorderPane>
