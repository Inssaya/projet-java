<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="border-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.app.controller.ReportsController">
   <top>
      <Label text="Reports Module" BorderPane.alignment="CENTER_LEFT">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" left="20.0" top="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <TabPane tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
         <tabs>
            <Tab text="Revenue Reports">
               <content>
                  <VBox spacing="15.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="Summary" style="-fx-font-weight: bold;" />
                        <HBox spacing="20.0">
                           <children>
                              <VBox styleClass="card" prefWidth="200.0">
                                 <children>
                                    <Label text="Monthly Revenue" style="-fx-font-size: 14px;" />
                                    <Label fx:id="monthlyRevenueLabel" text="\$0.00">
                                       <font>
                                          <Font name="System Bold" size="24.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                              <VBox styleClass="card" prefWidth="200.0">
                                 <children>
                                    <Label text="Annual Revenue" style="-fx-font-size: 14px;" />
                                    <Label fx:id="annualRevenueLabel" text="\$0.00">
                                       <font>
                                          <Font name="System Bold" size="24.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </VBox>
                           </children>
                        </HBox>
                        <Label text="Payment Details" style="-fx-font-weight: bold;" />
                        <TableView fx:id="paymentTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="payDateColumn" prefWidth="100.0" text="Date" />
                              <TableColumn fx:id="payMemberIdColumn" prefWidth="75.0" text="Member ID" />
                              <TableColumn fx:id="payAmountColumn" prefWidth="100.0" text="Amount" />
                              <TableColumn fx:id="payPeriodColumn" prefWidth="100.0" text="Period (Months)" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleExportRevenuePDF" text="Export to PDF" />
                              <Button mnemonicParsing="false" onAction="#handleExportRevenueExcel" text="Export to Excel" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
            <Tab text="Attendance Reports">
               <content>
                  <VBox spacing="15.0">
                     <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </padding>
                     <children>
                        <Label text="Attendance Details" style="-fx-font-weight: bold;" />
                        <TableView fx:id="attendanceTable" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="attTimestampColumn" prefWidth="150.0" text="Timestamp" />
                              <TableColumn fx:id="attMemberIdColumn" prefWidth="75.0" text="Member ID" />
                           </columns>
                           <columnResizePolicy>
                              <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                           </columnResizePolicy>
                        </TableView>
                        <HBox alignment="CENTER_RIGHT" spacing="10.0">
                           <children>
                              <Button mnemonicParsing="false" onAction="#handleExportAttendancePDF" text="Export to PDF" />
                              <Button mnemonicParsing="false" onAction="#handleExportAttendanceExcel" text="Export to Excel" />
                           </children>
                        </HBox>
                     </children>
                  </VBox>
               </content>
            </Tab>
         </tabs>
      </TabPane>
   </center>
</BorderPane>
