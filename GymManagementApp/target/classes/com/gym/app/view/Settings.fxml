<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" styleClass="border-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gym.app.controller.SettingsController">
   <top>
      <Label text="%nav.settings" BorderPane.alignment="CENTER_LEFT">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" left="20.0" top="20.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <center>
      <VBox alignment="TOP_LEFT" prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <Label text="Language Settings">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <VBox spacing="5.0">
               <children>
                  <Label text="Select Language:" />
                  <ComboBox fx:id="languageComboBox" prefWidth="200.0" promptText="Select Language" />
               </children>
            </VBox>
            <Button mnemonicParsing="false" onAction="#handleApplyLanguage" text="Apply Language" />
         </children>
         <padding>
            <Insets left="20.0" top="20.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
